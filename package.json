{
  "name": "@mosby-zhou/crash-hunter",
  "version": "0.0.2",
  "description": "",
  "keywords": [],
  "main": "dist/node/index.js",
  "umd:main": "dist/browser/index.umd.js",
  "module": "dist/browser/index.es5.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/browser",
    "dist/node",
    "dist/index.d.ts"
  ],
  "author": "zhoucong <zhoucong@corp.netease.com>",
  "homepage": "https://mosby-zhou.github.io/crash-hunter/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/mosby-zhou/crash-hunter"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts src/ test/",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && api-extractor run && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage && node ./test/node/node.plugin._test.js",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "check-release-version": "ts-node --skip-project tools/check-release-version",
    "api": "tsc --module commonjs && api-extractor run",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "quotes": [
        2,
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ]
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "printWidth": 150,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@microsoft/api-extractor": "^7.9.6",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-strip": "^2.0.0",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.6.0",
    "colors": "^1.3.2",
    "commitizen": "^4.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-config": "^26.4.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.20",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.4",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^17.1.1",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7"
  }
}
